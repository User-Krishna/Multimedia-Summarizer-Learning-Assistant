<body>
    <div class="navbar">
        <img src="image/documentation.png"/>
        <h1>Document Uploader</h1>
    </div>
    <div class="main-container">
        <div class="container">
            <h2>Upload Document</h2>
            <form id="fileUploadForm" action="UploadServlet" method="post" enctype="multipart/form-data">
                <div id="fileList" class="file-list">
                    <ul></ul>
                </div>
                <input type="file" id="fileInput" name="files" accept=".doc, .docx, .txt, .pdf" multiple style="display: none;">
                <input type="hidden" id="wordCount" name="wordCount" value="300"> <!-- Hidden input field -->
                <button type="button" id="chooseButton" class="add-more-button" onclick="triggerFileInput()">Choose Document</button>
                <br><br>
                <button type="submit" class="submit-button">Summarize</button>
            </form>
            <div class="supported-formats">
                Supported formats: .doc, .docx, .txt, .pdf
            </div>
        </div>
        <div class="slider-container">
            <input type="range" id="wordCountSlider" min="200" max="10000" step="50" value="300">
            <span id="wordCountDisplay">300 words</span>
        </div>
    </div>
    <script>
        let selectedFiles = [];

        document.addEventListener('DOMContentLoaded', function () {
            const fileInput = document.getElementById('fileInput');
            const fileList = document.getElementById('fileList');
            const chooseButton = document.getElementById('chooseButton');
            const wordCountSlider = document.getElementById('wordCountSlider');
            const wordCountDisplay = document.getElementById('wordCountDisplay');
            const wordCountInput = document.getElementById('wordCount'); // Get the hidden input field

            fileInput.addEventListener('change', function () {
                const files = Array.from(fileInput.files);
                selectedFiles = selectedFiles.concat(files);
                updateFileList();
                fileInput.value = ''; // Clear the input value to allow selecting the same file again
            });

            wordCountSlider.addEventListener('input', function () {
                wordCountDisplay.textContent = `${wordCountSlider.value} words`;
                wordCountInput.value = wordCountSlider.value; // Update the hidden input field's value
            });
        });

        function updateFileList() {
            const fileList = document.getElementById('fileList');
            const fileListUl = fileList.querySelector('ul');
            const chooseButton = document.getElementById('chooseButton');
            fileListUl.innerHTML = ''; // Clear the existing list before adding new ones

            selectedFiles.forEach((file, index) => {
                const fileItem = document.createElement('li');
                fileItem.className = 'file-item';
                fileItem.innerHTML = `
                    <span>${file.name}</span>
                    <button type="button" onclick="deleteFile(${index})">Delete</button>
                `;
                fileListUl.appendChild(fileItem);
            });

            if (selectedFiles.length > 0) {
                chooseButton.style.display = 'none';
            } else {
                chooseButton.style.display = 'block';
            }
        }

        function deleteFile(index) {
            selectedFiles.splice(index, 1);
            updateFileList();
        }

        function triggerFileInput() {
            const fileInput = document.getElementById('fileInput');
            fileInput.click();
        }

        document.getElementById('fileUploadForm').addEventListener('submit', function (e) {
            const dt = new DataTransfer();
            selectedFiles.forEach(file => {
                dt.items.add(file);
            });
            document.getElementById('fileInput').files = dt.files;
        });
    </script>
</body>

