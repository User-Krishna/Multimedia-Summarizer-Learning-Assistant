    <div id="mySidebar" class="sidebar">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a href="landing.html"><i class="fas fa-home"></i> Return Home</a><br>
        <a href="#" onclick="openRightSidebar()"><i class="fas fa-edit"></i> Write Note</a><br>
        <a href="#" onclick="downloadSummary()"><i class="fas fa-download"></i> Download Summary</a><br>
        <a href="#" onclick="printSummary()"><i class="fas fa-print"></i> Print Summary</a><br>
        <a href="#" onclick="copyToClipboard()"><i class="fas fa-copy"></i> Copy to Clipboard</a><br>
        <a href="javascript:void(0)" onclick="toggleDarkMode()"><i class="fas fa-moon"></i> Dark Mode</a><br>
    </div>

    <div id="rightSidebar" class="right-sidebar">
        <a href="javascript:void(0)" class="closebtn" onclick="closeRightSidebar()">&times;</a>
        <h2>Write Note</h2>
        <textarea id="noteTextarea" rows="10" placeholder="Write your note here..."></textarea>
        <div style="display: flex; gap: 10px;">
            <button onclick="saveNote()">Save</button>
            <button onclick="clearNote()">Clear</button>
        </div>
    </div>

     <div class="letter">
    <h1>Summary of <%= session.getAttribute("filename") %>:</h1>
    <div id="summary">
        <%
            String summary = (String) session.getAttribute("summary");

            if (summary != null) {
                // Replace ##...## with <h1> and **...** with <h2>
                summary = summary.replaceAll("##(.*?)##", "<h1>$1</h1>");
                summary = summary.replaceAll("\\*\\*(.*?)\\*\\*", "<h2>$1</h2>");
                summary =summary.replaceAll("##");
                
                // Split the summary into sentences for formatting purposes
                String[] sentences = summary.split("\\.\\s*");
                int sentenceCount = 0;
                int paragraphSentenceCount = 5 + (int)(Math.random() * ((10 - 5) + 1)); // Random number between 5 and 10

                // Group sentences into paragraphs based on random sentence count
                StringBuilder paragraph = new StringBuilder();
                for (String sentence : sentences) {
                    paragraph.append(sentence.trim()).append(". ");
                    sentenceCount++;
                    if (sentenceCount >= paragraphSentenceCount) {
                        out.print("<p style='text-indent: 1em;'>" + paragraph.toString().trim() + "</p>");
                        paragraph.setLength(0); // Reset paragraph
                        sentenceCount = 0;
                        paragraphSentenceCount = 5 + (int)(Math.random() * ((10 - 5) + 1)); // Generate new random number for next paragraph
                    }
                }

                // Print the remaining sentences if any
                if (paragraph.length() > 0) {
                    out.print("<p style='text-indent: 1em;'>" + paragraph.toString().trim() + "</p>");
                }
            } else {
                out.print("No summary generated.");
            }
        %>
    </div>
</div>
    <script>
        function openNav() {
            document.getElementById("mySidebar").style.width = "250px";
        }

        function closeNav() {
            document.getElementById("mySidebar").style.width = "0";
        }

        function openRightSidebar() {
            closeNav(); // Close the hamburger menu
            document.getElementById("rightSidebar").style.width = "300px"; // Increase width for better UI
        }

        function closeRightSidebar() {
            document.getElementById("rightSidebar").style.width = "0";
        }

        function downloadSummary() {
            const summary = document.getElementById('summary').innerText;
            const blob = new Blob([summary], { type: 'text/plain' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'summary.txt';
            a.click();
            URL.revokeObjectURL(url);
        }

        function printSummary() {
            const summaryContent = document.getElementById('summary').innerHTML;
            const newWindow = window.open('', '', 'width=800, height=600');
            newWindow.document.write('<html><head><title>Print Summary</title></head><body>');
            newWindow.document.write(summaryContent);
            newWindow.document.write('</body></html>');
            newWindow.print();
        }

        function copyToClipboard() {
            const summary = document.getElementById('summary').innerText;
            navigator.clipboard.writeText(summary).then(() => {
                alert('Summary copied to clipboard!');
            }).catch(err => {
                console.error('Could not copy text: ', err);
            });
        }

        function toggleDarkMode() {
            document.body.classList.toggle('dark-mode');
        }

        function saveNote() {
            const note = document.getElementById('noteTextarea').value;
            if (note) {
                // Sending the note to the server using AJAX
                const xhr = new XMLHttpRequest();
                xhr.open('POST', 'saveNote.jsp', true);
                xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');
                xhr.onreadystatechange = function () {
                    if (xhr.readyState === 4 && xhr.status === 200) {
                        closeRightSidebar();
                    }
                };
                xhr.send('note=' + encodeURIComponent(note));
            }
        }
        function clearNote() {
            document.getElementById('noteTextarea').value = '';
        }
    </script>
</body>
</html>